---
import type { Post } from '../../types';
import { formatDate } from '../../utils/helpers';

interface Props {
  post: Post;
}

const { post } = Astro.props;
---

<article class="post-card">
  <a href={`/blog/${post.slug}`} class="card-link">
    {post.coverImage ? (
      <div class="card-image">
        <img
          src={post.coverImage}
          alt={post.title}
          loading="lazy"
        />
        <div class="image-overlay"></div>
      </div>
    ) : (
      <div class="card-image card-image--placeholder">
        <div class="placeholder-gradient"></div>
        <svg class="placeholder-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
          <circle cx="8.5" cy="8.5" r="1.5"/>
          <polyline points="21 15 16 10 5 21"/>
        </svg>
      </div>
    )}
    
    <div class="card-content">
      <div class="card-header">
        {post.category && (
          <span class="category-badge">{post.category.name}</span>
        )}
        <time datetime={post.publishedAt} class="card-date">
          {formatDate(post.publishedAt)}
        </time>
      </div>
      
      <h3 class="card-title">{post.title}</h3>
      
      {post.excerpt && (
        <p class="card-excerpt">{post.excerpt}</p>
      )}
      
      {post.author && (
        <div class="card-footer">
          <div class="author-info">
            {post.author.avatar ? (
              <img
                src={post.author.avatar}
                alt={post.author.name}
                class="author-avatar"
              />
            ) : (
              <div class="author-avatar author-avatar--placeholder">
                {post.author.name.charAt(0).toUpperCase()}
              </div>
            )}
            <span class="author-name">{post.author.name}</span>
          </div>
          
          <div class="read-more">
            <span>Read article</span>
            <svg class="arrow-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14m-7-7l7 7-7 7"/>
            </svg>
          </div>
        </div>
      )}
    </div>
  </a>
</article>

<style>
  .post-card {
    background: hsl(var(--color-card));
    border: 1px solid hsl(var(--color-border));
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all var(--transition-base);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .post-card:hover {
    box-shadow: var(--shadow-xl);
    transform: translateY(-4px);
    border-color: hsl(var(--color-primary) / 0.3);
  }

  .card-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  /* Card Image */
  .card-image {
    position: relative;
    width: 100%;
    height: 220px;
    overflow: hidden;
    background: hsl(var(--color-muted));
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .post-card:hover .card-image img {
    transform: scale(1.05);
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      hsl(var(--color-background) / 0.05) 100%
    );
    opacity: 0;
    transition: opacity var(--transition-base);
  }

  .post-card:hover .image-overlay {
    opacity: 1;
  }

  /* Placeholder */
  .card-image--placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .placeholder-gradient {
    position: absolute;
    inset: 0;
    background: var(--gradient-primary);
    opacity: 0.1;
  }

  .placeholder-icon {
    width: 64px;
    height: 64px;
    color: hsl(var(--color-primary) / 0.3);
    position: relative;
    z-index: 1;
  }

  /* Card Content */
  .card-content {
    padding: var(--spacing-xl);
    display: flex;
    flex-direction: column;
    flex: 1;
    gap: var(--spacing-md);
  }

  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--spacing-md);
  }

  .category-badge {
    display: inline-flex;
    align-items: center;
    padding: var(--spacing-xs) var(--spacing-md);
    background: hsl(var(--color-primary) / 0.1);
    color: hsl(var(--color-primary));
    border-radius: var(--radius-2xl);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-date {
    font-size: var(--text-sm);
    color: hsl(var(--color-muted-foreground));
  }

  .card-title {
    font-size: var(--text-xl);
    font-weight: 700;
    line-height: 1.3;
    color: hsl(var(--color-foreground));
    margin: 0;
    transition: color var(--transition-fast);
  }

  .post-card:hover .card-title {
    color: hsl(var(--color-primary));
  }

  .card-excerpt {
    font-size: var(--text-sm);
    color: hsl(var(--color-muted-foreground));
    line-height: 1.6;
    margin: 0;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Card Footer */
  .card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--spacing-md);
    border-top: 1px solid hsl(var(--color-border));
    margin-top: auto;
  }

  .author-info {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .author-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid hsl(var(--color-border));
  }

  .author-avatar--placeholder {
    background: var(--gradient-primary);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-sm);
    font-weight: 600;
  }

  .author-name {
    font-size: var(--text-sm);
    font-weight: 500;
    color: hsl(var(--color-muted-foreground));
  }

  .read-more {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    font-size: var(--text-sm);
    font-weight: 500;
    color: hsl(var(--color-primary));
    opacity: 0;
    transform: translateX(-8px);
    transition: all var(--transition-base);
  }

  .post-card:hover .read-more {
    opacity: 1;
    transform: translateX(0);
  }

  .arrow-icon {
    width: 16px;
    height: 16px;
    transition: transform var(--transition-base);
  }

  .post-card:hover .arrow-icon {
    transform: translateX(4px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .card-image {
      height: 200px;
    }

    .card-content {
      padding: var(--spacing-lg);
    }

    .read-more {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>
