---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ErrorState from '../../components/blog/ErrorState.astro';
import { getPostBySlug, getAllPostSlugs } from '../../lib/blog';
import { formatDate } from '../../utils/helpers';
import type { Post } from '../../types';

export async function getStaticPaths() {
  try {
    const slugs = await getAllPostSlugs();
    return slugs.map((slug) => ({
      params: { slug },
    }));
  } catch (error) {
    console.error('Error generating static paths:', error);
    return [];
  }
}

const { slug } = Astro.params;

let post: Post | null = null;
let error: string | null = null;

try {
  post = await getPostBySlug(slug!);
  if (!post) {
    error = 'Post not found';
  }
} catch (e) {
  error = e instanceof Error ? e.message : 'Failed to load post';
  console.error('Error loading post:', e);
}
---

{post ? (
  <BaseLayout
    seo={{
      title: `${post.title} - WardayaHub`,
      description: post.excerpt || post.title,
      image: post.coverImage,
      type: 'article',
      publishedAt: post.publishedAt,
      updatedAt: post.updatedAt,
      author: post.author?.name,
      tags: post.tags,
    }}
  >
    <article class="post-detail" itemscope itemtype="https://schema.org/Article">
      {post.coverImage && (
        <div class="post-hero">
          <img 
            src={post.coverImage} 
            alt={post.title}
            itemprop="image"
          />
        </div>
      )}

      <div class="post-header">
        <div class="post-meta">
          {post.category && (
            <a href={`/category/${post.category.slug}`} class="category-badge">
              {post.category.name}
            </a>
          )}
          <time datetime={post.publishedAt} itemprop="datePublished">
            {formatDate(post.publishedAt)}
          </time>
        </div>

        <h1 class="post-title" itemprop="headline">{post.title}</h1>

        {post.excerpt && (
          <p class="post-excerpt" itemprop="description">{post.excerpt}</p>
        )}

        {post.author && (
          <div class="post-author" itemprop="author" itemscope itemtype="https://schema.org/Person">
            {post.author.avatar && (
              <img
                src={post.author.avatar}
                alt={post.author.name}
                class="author-avatar"
                itemprop="image"
              />
            )}
            <div class="author-info">
              <span class="author-name" itemprop="name">{post.author.name}</span>
              {post.author.bio && (
                <span class="author-bio">{post.author.bio}</span>
              )}
            </div>
          </div>
        )}
      </div>

      <div class="post-content" itemprop="articleBody" set:html={post.content} />

      {post.tags && post.tags.length > 0 && (
        <div class="post-tags">
          <h3>Tags</h3>
          <div class="tags-list">
            {post.tags.map((tag) => (
              <span class="tag" itemprop="keywords">{tag}</span>
            ))}
          </div>
        </div>
      )}

      <div class="post-footer">
        <a href="/blog" class="btn-back">‚Üê Back to Blog</a>
      </div>
    </article>
  </BaseLayout>
) : (
  <BaseLayout
    seo={{
      title: 'Post Not Found - WardayaHub',
      description: 'The requested blog post could not be found.',
      noindex: true,
    }}
  >
    <ErrorState error={error || 'Post not found'} />
  </BaseLayout>
)}

<style>
  .post-detail {
    max-width: 800px;
    margin: 0 auto;
  }

  .post-hero {
    width: 100%;
    height: 400px;
    overflow: hidden;
    border-radius: 1rem;
    margin-bottom: 2rem;
  }

  .post-hero img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-header {
    margin-bottom: 3rem;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }

  .category-badge {
    background: #0066cc;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    text-decoration: none;
    transition: background 0.3s ease;
  }

  .category-badge:hover {
    background: #0052a3;
  }

  time {
    color: #666;
  }

  .post-title {
    font-size: 2.5rem;
    line-height: 1.2;
    margin: 0 0 1rem 0;
    color: #111;
  }

  .post-excerpt {
    font-size: 1.25rem;
    color: #666;
    line-height: 1.6;
    margin: 0 0 2rem 0;
  }

  .post-author {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: #f9fafb;
    border-radius: 0.5rem;
    border: 1px solid #e5e5e5;
  }

  .author-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    object-fit: cover;
  }

  .author-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .author-name {
    font-weight: 600;
    color: #111;
    font-size: 1rem;
  }

  .author-bio {
    color: #666;
    font-size: 0.875rem;
  }

  .post-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #333;
    margin-bottom: 3rem;
  }

  .post-content :global(h2) {
    font-size: 1.75rem;
    margin: 2rem 0 1rem 0;
    color: #111;
  }

  .post-content :global(h3) {
    font-size: 1.5rem;
    margin: 1.5rem 0 0.75rem 0;
    color: #111;
  }

  .post-content :global(p) {
    margin: 0 0 1.5rem 0;
  }

  .post-content :global(a) {
    color: #0066cc;
    text-decoration: underline;
  }

  .post-content :global(a:hover) {
    color: #0052a3;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 2rem 0;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid #0066cc;
    padding-left: 1.5rem;
    margin: 2rem 0;
    color: #666;
    font-style: italic;
  }

  .post-content :global(code) {
    background: #f5f5f5;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
  }

  .post-content :global(pre) {
    background: #1e1e1e;
    color: #d4d4d4;
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin: 0.5rem 0;
  }

  .post-tags {
    padding: 2rem 0;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
    margin-bottom: 2rem;
  }

  .post-tags h3 {
    font-size: 1rem;
    margin: 0 0 1rem 0;
    color: #111;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background: #f0f0f0;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    color: #666;
  }

  .post-footer {
    text-align: center;
    padding: 2rem 0;
  }

  .btn-back {
    display: inline-block;
    padding: 0.75rem 2rem;
    background: white;
    color: #0066cc;
    border: 2px solid #0066cc;
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-back:hover {
    background: #0066cc;
    color: white;
  }

  @media (max-width: 768px) {
    .post-hero {
      height: 250px;
      border-radius: 0.5rem;
    }

    .post-title {
      font-size: 2rem;
    }

    .post-excerpt {
      font-size: 1.125rem;
    }

    .post-content {
      font-size: 1rem;
    }

    .post-content :global(h2) {
      font-size: 1.5rem;
    }

    .post-content :global(h3) {
      font-size: 1.25rem;
    }
  }
</style>
