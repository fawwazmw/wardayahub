---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ErrorState from '../../components/blog/ErrorState.astro';
import Comments from '../../components/blog/Comments.astro';
import { getPostBySlug, getAllPostSlugs } from '../../lib/blog';
import { formatDate } from '../../utils/helpers';
import type { Post } from '../../types';

export async function getStaticPaths() {
  try {
    const slugs = await getAllPostSlugs();
    return slugs.map((slug) => ({
      params: { slug },
    }));
  } catch (error) {
    console.error('Error generating static paths:', error);
    return [];
  }
}

const { slug } = Astro.params;

let post: Post | null = null;
let error: string | null = null;

try {
  post = await getPostBySlug(slug!);
  if (!post) {
    error = 'Post not found';
  }
} catch (e) {
  error = e instanceof Error ? e.message : 'Failed to load post';
  console.error('Error loading post:', e);
}
---

{post ? (
  <BaseLayout
    seo={{
      title: `${post.title} - WardayaHub`,
      description: post.excerpt || post.title,
      image: post.coverImage,
      type: 'article',
      publishedAt: post.publishedAt,
      updatedAt: post.updatedAt,
      author: post.author?.name,
      tags: post.tags,
    }}
  >
    <article class="post-detail" itemscope itemtype="https://schema.org/Article">
      {post.coverImage ? (
        <div class="post-hero">
          <img 
            src={post.coverImage} 
            alt={post.title}
            itemprop="image"
          />
          <div class="image-overlay"></div>
        </div>
      ) : (
        <div class="post-hero post-hero--placeholder">
          <div class="placeholder-gradient"></div>
          <svg class="placeholder-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
            <circle cx="8.5" cy="8.5" r="1.5"/>
            <polyline points="21 15 16 10 5 21"/>
          </svg>
        </div>
      )}

      <div class="post-container">
        <header class="post-header">
          <div class="post-meta">
            {post.category && (
              <a href={`/category/${post.category.slug}`} class="category-badge">
                {post.category.name}
              </a>
            )}
            <time datetime={post.publishedAt} itemprop="datePublished" class="post-date">
              {formatDate(post.publishedAt)}
            </time>
          </div>

          <h1 class="post-title" itemprop="headline">{post.title}</h1>

          {post.excerpt && (
            <p class="post-excerpt" itemprop="description">{post.excerpt}</p>
          )}

          {post.author && (
            <div class="post-author" itemprop="author" itemscope itemtype="https://schema.org/Person">
              {post.author.avatar ? (
                <img
                  src={post.author.avatar}
                  alt={post.author.name}
                  class="author-avatar"
                  itemprop="image"
                />
              ) : (
                <div class="author-avatar author-avatar--placeholder">
                  {post.author.name.charAt(0).toUpperCase()}
                </div>
              )}
              <div class="author-info">
                <span class="author-name" itemprop="name">{post.author.name}</span>
                {post.author.bio && (
                  <span class="author-bio">{post.author.bio}</span>
                )}
              </div>
            </div>
          )}
        </header>

        <div class="post-content prose" itemprop="articleBody" set:html={post.content} />

        {post.tags && post.tags.length > 0 && (
          <div class="post-tags">
            <h3 class="tags-title">Tags</h3>
            <div class="tags-list">
              {post.tags.map((tag) => (
                <span class="tag" itemprop="keywords">{tag}</span>
              ))}
            </div>
          </div>
        )}

        <div class="post-footer">
          <a href="/blog" class="btn btn-outline">
            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M19 12H5m7 7l-7-7 7-7"/>
            </svg>
            <span>Back to Blog</span>
          </a>
        </div>
      </div>
      
      <Comments />
    </article>
  </BaseLayout>
) : (
  <BaseLayout
    seo={{
      title: 'Post Not Found - WardayaHub',
      description: 'The requested blog post could not be found.',
      noindex: true,
    }}
  >
    <ErrorState error={error || 'Post not found'} />
  </BaseLayout>
)}

<style>
  .post-detail {
    width: 100%;
  }

  .post-hero {
    width: 100%;
    height: 400px;
    position: relative;
    overflow: hidden;
    background: hsl(var(--color-muted));
    margin-bottom: var(--spacing-3xl);
  }

  .post-hero img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      hsl(var(--color-background) / 0.1) 100%
    );
  }

  /* Placeholder Hero */
  .post-hero--placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-gradient {
    position: absolute;
    inset: 0;
    background: var(--gradient-primary);
    opacity: 0.1;
  }

  .placeholder-icon {
    width: 80px;
    height: 80px;
    color: hsl(var(--color-primary) / 0.3);
    position: relative;
    z-index: 1;
  }

  .post-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  .post-header {
    margin-bottom: var(--spacing-3xl);
    text-align: center;
  }

  .post-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
  }

  .category-badge {
    display: inline-flex;
    align-items: center;
    padding: var(--spacing-xs) var(--spacing-md);
    background: hsl(var(--color-primary) / 0.1);
    color: hsl(var(--color-primary));
    border-radius: var(--radius-2xl);
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-decoration: none;
    transition: background var(--transition-fast);
  }

  .category-badge:hover {
    background: hsl(var(--color-primary) / 0.2);
  }

  .post-date {
    font-size: var(--text-sm);
    color: hsl(var(--color-muted-foreground));
  }

  .post-title {
    font-size: var(--text-4xl);
    line-height: 1.2;
    margin: 0 0 var(--spacing-lg) 0;
    color: hsl(var(--color-foreground));
    font-weight: 800;
  }

  .post-excerpt {
    font-size: var(--text-xl);
    color: hsl(var(--color-muted-foreground));
    line-height: 1.6;
    margin: 0 0 var(--spacing-2xl) 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .post-author {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-md) var(--spacing-xl);
    background: hsl(var(--color-card));
    border: 1px solid hsl(var(--color-border));
    border-radius: var(--radius-full);
  }

  .author-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid hsl(var(--color-border));
  }

  .author-avatar--placeholder {
    background: var(--gradient-primary);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-lg);
    font-weight: 600;
  }

  .author-info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
  }

  .author-name {
    font-weight: 600;
    color: hsl(var(--color-foreground));
    font-size: var(--text-base);
  }

  .author-bio {
    color: hsl(var(--color-muted-foreground));
    font-size: var(--text-sm);
  }

  /* Content Typography - Now handled by .prose in design-system.css, 
     but kept some specifics for override if needed */
  .post-content {
    margin-bottom: var(--spacing-3xl);
  }

  /* Tags */
  .post-tags {
    padding: var(--spacing-xl) 0;
    border-top: 1px solid hsl(var(--color-border));
    border-bottom: 1px solid hsl(var(--color-border));
    margin-bottom: var(--spacing-2xl);
  }

  .tags-title {
    font-size: var(--text-sm);
    font-weight: 600;
    margin: 0 0 var(--spacing-md) 0;
    color: hsl(var(--color-foreground));
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .tag {
    background: hsl(var(--color-muted));
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    color: hsl(var(--color-muted-foreground));
    transition: all var(--transition-fast);
  }

  .tag:hover {
    background: hsl(var(--color-accent));
    color: hsl(var(--color-foreground));
  }

  .post-footer {
    text-align: center;
    padding: var(--spacing-xl) 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .post-hero {
      height: 250px;
    }

    .post-title {
      font-size: var(--text-3xl);
    }

    .post-excerpt {
      font-size: var(--text-lg);
    }

    .post-content {
      font-size: var(--text-base);
    }

    .post-content :global(h2) {
      font-size: var(--text-2xl);
    }

    .post-content :global(h3) {
      font-size: var(--text-xl);
    }
  }
</style>
